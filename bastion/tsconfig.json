{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "lib",
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "./node_modules/*",
    "./lib/*"
  ],
  "lib": ["es2017"]
}